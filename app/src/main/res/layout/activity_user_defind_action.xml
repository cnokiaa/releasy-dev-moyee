<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/page_background">
    
    <com.releasy.android.view.TopNavLayout 
        android:id="@+id/topNavLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">    
    </com.releasy.android.view.TopNavLayout>
    
    <RelativeLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp">
        <com.releasy.android.view.CircularSeekBar
            android:id="@+id/circularSeekBar"
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:layout_centerInParent="true"/>
        <ImageView
            android:id="@+id/switchImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_start"/>
    </RelativeLayout>
    
    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/cut_off_rule"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/transparent"
        android:gravity="center_vertical">
        
        <ImageView
            android:id="@+id/musicAnimImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_sing_anim"/>
        
        <TextView
            android:id="@+id/musicNameTxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/works_title"
            android:textSize="20sp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center"/>
        
        <ImageView
            android:id="@+id/musicSwitchBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_volume_float"/>
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/cut_off_rule"/>
    
    <ScrollView  
        android:id="@+id/scrollView"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:fillViewport="true"
		android:scrollbars="none">
        <LinearLayout
            android:id="@+id/deviceLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>
    </ScrollView>
    
</LinearLayout>