<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/white">
    
    <com.releasy.android.view.TopNavLayout 
        android:id="@+id/topNavLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">    
    </com.releasy.android.view.TopNavLayout>
    
    <LinearLayout
        android:id="@+id/step1_layout"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:orientation="vertical" 
        android:gravity="center_horizontal"
        android:layout_weight="1">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_txt_869398"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_margin="10dp"
            android:text="@string/please_choose_your_gender"
            />
        <RadioGroup  
            android:id="@+id/gender_rgs"  
            android:layout_width="wrap_content"  
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_margin="10dp">  
            <RadioButton  
                android:id="@+id/boy_rg"  
                android:layout_width="wrap_content"  
                android:layout_height="wrap_content"  
                android:checked="true"  
                android:gravity="center"
                android:button="@null"
                android:drawableTop="@drawable/bg_boy_rg"/>
            <RadioButton  
                android:id="@+id/girl_rg"  
                android:layout_width="wrap_content"  
                android:layout_height="wrap_content"  
                android:gravity="center"
                android:button="@null"
                android:drawableTop="@drawable/bg_girl_rg"/>  
        </RadioGroup> 
        <Button
            android:id="@+id/step1_next_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/btn_step1_next"
            android:text="@string/next_step"
            android:textSize="20sp"
            android:textColor="@color/color_info_perfect_btn"
            />
    </LinearLayout>
    
    
    <LinearLayout
        android:id="@+id/step2_layout"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" 
        android:gravity="center_horizontal"
        android:visibility="gone">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_txt_869398"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_margin="10dp"
            android:text="@string/please_choose_your_date_of_birth"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rili_03"/>
            <LinearLayout
                android:id="@+id/data_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="#EDF7FF"
                android:paddingTop="10dp"
                android:orientation="vertical" />  
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rili_01"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp">
            <Button
                android:id="@+id/step2_last_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_step"
                android:text="@string/last_step"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/color_info_perfect_btn"/>
            <Button
                android:id="@+id/step2_next_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_step"
                android:text="@string/next_step"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/color_info_perfect_btn"/>
        </LinearLayout>
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/step3_layout"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" 
        android:gravity="center_horizontal"
        android:visibility="gone">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_txt_869398"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_margin="10dp"
            android:text="@string/please_choose_your_height"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:gravity="center_vertical"
            android:layout_weight="1">
            <TextView
                android:id="@+id/height_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="35sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:text="0"
                android:textColor="@color/color_txt_5ECAFA"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/color_txt_869398"
                android:text="cm"
                android:layout_weight="1"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/height"
                android:padding="5dp">
                <com.releasy.android.view.VerticalScaleScrollView
                    android:id="@+id/verticalScaleScrollView"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp">
            <Button
                android:id="@+id/step3_last_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_step"
                android:text="@string/last_step"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/color_info_perfect_btn"/>
            <Button
                android:id="@+id/step3_next_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_step"
                android:text="@string/next_step"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/color_info_perfect_btn"/>
        </LinearLayout>
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/step4_layout"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" 
        android:gravity="center_horizontal"
        android:visibility="gone">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_txt_869398"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_margin="10dp"
            android:text="@string/please_choose_your_weight"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_horizontal">
                <TextView
                    android:id="@+id/weight_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="35sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:text="0"
                    android:textColor="@color/color_txt_5ECAFA"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/color_txt_869398"
                    android:text="kg"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/weight_bg"
                android:gravity="center"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="25dp"
                    android:background="@drawable/weight_chizi"
                    android:padding="5dp">
                    <com.releasy.android.view.HorizontalScaleScrollView
                        android:id="@+id/horizontalScaleScrollView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/weight_foot"
                    android:layout_marginBottom="10dp"
                    />
            </LinearLayout>
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp">
            <Button
                android:id="@+id/step4_last_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_step"
                android:text="@string/last_step"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/color_info_perfect_btn"/>
            <Button
                android:id="@+id/step4_next_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_step"
                android:text="@string/next_step"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/color_info_perfect_btn"/>
        </LinearLayout>
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/step5_layout"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" 
        android:gravity="center_horizontal"
        android:visibility="gone">
        <TextView
            android:id="@+id/step5_txt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_txt_869398"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_margin="10dp"
            android:text="@string/please_enter_your_phone_number"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="5dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/iconfrom_number"/>
                <EditText
                    android:id="@+id/phone_or_email_edit"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/please_enter_your_phone_number"
                    android:textColor="@color/color_txt_869398"
                    android:textSize="18sp"
                    android:layout_marginLeft="20dp"
                    android:singleLine="true"
                    android:gravity="center"
                    android:background="@null"
                    />
            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/cut_off_rule"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp">
            <Button
                android:id="@+id/step5_last_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_step"
                android:text="@string/last_step"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/color_info_perfect_btn"/>
            <Button
                android:id="@+id/complete_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_complete"
                android:text="@string/complete"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/color_complete_btn"/>
        </LinearLayout>
    </LinearLayout>
    
</LinearLayout>