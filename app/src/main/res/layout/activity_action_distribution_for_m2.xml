<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_background">
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        
        <ImageView
            android:id="@+id/action_bg_img"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/bg_11"
            android:scaleType="centerCrop"
            />
        
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="220dp">
            <TextView 
                android:id="@+id/timeTxt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="17.5dp"
                android:gravity="center"
                android:text="@string/initial_time"
                android:textSize="22sp"
                android:textColor="@color/color_txt_7FAFC8"/>
            <ImageView
                android:id="@+id/switchImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_start"
                android:layout_margin="5dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"/>
            
            <LinearLayout
                android:id="@+id/m2_m_device_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bluebox_01"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"> 
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/m2_m_action_txt"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:textSize="16sp"
                        android:text="@string/pls_selsct_action_txt"
                        android:textColor="@color/color_txt_5ECAFA"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#dfdfdf"/>
                     <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center">
                        <ImageView
                            android:id="@+id/m2_m_subtract_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_minus"/>
                        <TextView
                            android:id="@+id/m2_m_strength_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:textColor="@color/color_txt_5ECAFA"
                            android:textSize="16sp"
                            android:text="1"/>
                        <ImageView
                            android:id="@+id/m2_m_add_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_plus"/>
                    </LinearLayout>
                </LinearLayout>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/m_icon"
                    android:layout_margin="7.5dp"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
            
            <LinearLayout
                android:id="@+id/m2_s_device_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bluebox_02"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"> 
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/s_icon"
                    android:layout_margin="7.5dp"
                    android:layout_gravity="center_vertical"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/m2_s_action_txt"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:textSize="16sp"
                        android:text="@string/pls_selsct_action_txt"
                        android:textColor="@color/color_txt_5ECAFA"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#dfdfdf"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center">
                        <ImageView
                            android:id="@+id/m2_s_subtract_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_minus"/>
                        <TextView
                            android:id="@+id/m2_s_strength_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:textColor="@color/color_txt_5ECAFA"
                            android:textSize="16sp"
                            android:text="1"
                            />
                        <ImageView
                            android:id="@+id/m2_s_add_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_plus"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            
        </RelativeLayout> 
    </LinearLayout>
    
        <RelativeLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:background="@drawable/tab_bar_bg2">
            
            <ImageView
                android:id="@+id/tobNavLeftImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_nav_bar_back2"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"/>
            
            <ImageView
                android:id="@+id/tobNavRightImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/nav_music"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"/>

            <TextView
                android:id="@+id/titleTxt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </RelativeLayout>
        
</RelativeLayout>
    
    
    
    