<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/action_pop_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:orientation="vertical" >
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    
    <RadioGroup
        android:id="@+id/tabRG"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/tab_bar_bg"
        android:gravity="center">
        <RadioButton
            android:id="@+id/baseActionRG"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:button="@null"
            android:textColor="@color/color_bottom_action_rg"
            android:textSize="18sp"
            android:gravity="center"
            android:singleLine="true"
            android:checked="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/base_action"/>
        <RadioButton
            android:id="@+id/sceneActionRG"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:button="@null"
            android:textColor="@color/color_bottom_action_rg"
            android:textSize="18sp"
            android:gravity="center"
            android:singleLine="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/scene_action"/>
        </RadioGroup>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:background="@color/white"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">
        <GridView
            android:id="@+id/gridView"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:numColumns="4"
            android:verticalSpacing="0.0px" 
            android:horizontalSpacing="0.0px"   
            android:stretchMode="columnWidth"
            android:gravity="fill"
            android:listSelector="@null" 
            android:soundEffectsEnabled="true"
            android:smoothScrollbar="true"  />
        
        <ImageView
            android:id="@+id/cancel_btn"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/btn_close"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>
    
</LinearLayout>