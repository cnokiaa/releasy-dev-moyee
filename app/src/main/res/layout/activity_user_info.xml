<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/white" >

    <com.releasy.android.view.TopNavLayout 
        android:id="@+id/topNavLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">    
    </com.releasy.android.view.TopNavLayout>
    
    <LinearLayout
        android:id="@+id/phonenum_or_email_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_item_w2g">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingTop="12.5dp"
            android:paddingLeft="30dp"
            android:paddingRight="15dp"
            android:paddingBottom="12.5dp">
            <TextView
                android:id="@+id/phone_or_email_title_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/phone_number"
                android:textSize="16sp"
                android:textColor="@color/color_txt_848B99"/>
            <TextView
                android:id="@+id/phone_or_email_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:paddingLeft="15dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/color_txt_848B99"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_more_right_normal"/>
        </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="2px"
            android:layout_marginLeft="30dp"
            android:background="@color/cut_off_rule"/>
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/sex_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_item_w2g">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingTop="12.5dp"
            android:paddingLeft="30dp"
            android:paddingRight="15dp"
            android:paddingBottom="12.5dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/sex"
                android:textSize="16sp"
                android:textColor="@color/color_txt_848B99"/>
            <TextView
                android:id="@+id/sex_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:paddingLeft="15dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/color_txt_848B99"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_more_right_normal"/>
        </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="2px"
            android:layout_marginLeft="30dp"
            android:background="@color/cut_off_rule"/>
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/age_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_item_w2g">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingTop="12.5dp"
            android:paddingLeft="30dp"
            android:paddingRight="15dp"
            android:paddingBottom="12.5dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/age"
                android:textSize="16sp"
                android:textColor="@color/color_txt_848B99"/>
            <TextView
                android:id="@+id/age_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:paddingLeft="15dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/color_txt_848B99"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_more_right_normal"/>
        </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="2px"
            android:layout_marginLeft="30dp"
            android:background="@color/cut_off_rule"/>
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/height_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_item_w2g">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingTop="12.5dp"
            android:paddingLeft="30dp"
            android:paddingRight="15dp"
            android:paddingBottom="12.5dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/height"
                android:textSize="16sp"
                android:textColor="@color/color_txt_848B99"/>
            <TextView
                android:id="@+id/height_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:paddingLeft="15dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/color_txt_848B99"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_more_right_normal"/>
        </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="2px"
            android:layout_marginLeft="30dp"
            android:background="@color/cut_off_rule"/>
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/weight_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_item_w2g">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingTop="12.5dp"
            android:paddingLeft="30dp"
            android:paddingRight="15dp"
            android:paddingBottom="12.5dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/weight"
                android:textSize="16sp"
                android:textColor="@color/color_txt_848B99"/>
            <TextView
                android:id="@+id/weight_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:paddingLeft="15dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/color_txt_848B99"/>
            <ImageView
                android:layout_width="wrap_content"
